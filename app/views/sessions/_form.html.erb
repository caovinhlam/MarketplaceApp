<%= form_with(model: @session, data: {turbo: false}) do |f| %>
  <fieldset class="mb-2">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset class="mb-2">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </fieldset>
  
  <fieldset class="mb-2">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, @categories, :id, :name %>
  </fieldset>

  <% if @session.cover.attached? %>
    <fieldset class="mb-2">
      <%= cl_image_tag @session.cover.key, transformation: ["media_lib_thumb"], cloud_name: 'meanbojji' %>
    </fieldset>
  <% end %>

  <fieldset class="mb-2">
    <%= f.label :cover %>
    <%= f.file_field :cover %>
  </fieldset>
  <%= f.hidden_field :user_id, value: current_user.id%>
  <fieldset>
    <%= f.submit class: 'btn btn-primary' %>
  </fieldset>
<% end %>